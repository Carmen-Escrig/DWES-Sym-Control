{% extends "base.html.twig" %}
{% block title %}Menu Empleados
{% endblock %}
{% block body %}

	<h1>Menu de Empleados</h1>
	<hr>

	{% if app.user %}

		<a href="{{ path('app_register') }}">Alta</a>
		<a href="{{ path('app_logout') }}">Salir</a>

	{% else %}

		<a href="{{ path('app_login') }}">Login</a>
		<a href="{{ path('app_register') }}">Registrarse</a>

	{% endif %}

	<br>


	{% if empleados %}

		{% for empleado in empleados %}

			{{ include ('partials/_datos_empleado.html.twig', { 'empleado': empleado }) }}

		{% endfor %}

	{% else %}
		<h3>No hay empleados registrados</h3>

	{% endif %}

	<hr>
	<h3>Buscar Empleado (por apellido)</h3>

	<form class="" action='{{ path('search_empleado') }}'>
		<input type="text" class="form-control" style="display:unset; width:85%" placeholder="Search" name='searchTerm'>
		<button type='submit' class="btn btn-primary btn-danger">
			<i class="fa fa-search"></i>
		</button>
	</form>

{% endblock %}
